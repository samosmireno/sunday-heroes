{
  "version": 2,
  "buildCommand": "cd packages/logger && npm run build && cd ../../apps/server && npm run build:vercel && cd ../../apps/client && npm run build:vercel",
  "outputDirectory": "dist",
  "installCommand": "npm install",
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/server.js" },
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "functions": {
    "api/server.js": {
      "memory": 1024,
      "maxDuration": 10
    }
  },
  "env": {
    "VERCEL_URL": "https://sunday-heroes-client.vercel.app"
  }
}
